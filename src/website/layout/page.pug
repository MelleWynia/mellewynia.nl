
block variables
- var title = title || `${CV.givenName} ${CV.familyName} — ${CV.jobTitle}`;

doctype html
html
    head
        meta( charset="utf-8" )
        meta( http-equiv="X-UA-Compatible" content="IE=edge" )

        title=title
        meta( name="description" content=`${CV.rate} (${CV.availability}) — ${CV.description}` )

        meta( name="viewport" content="width=device-width,height=device-height,user-scalable=no,initial-scale=1.0,maximum-scale=1.0,minimum-scale=1.0" )

        style
            include ../../output/css/all.css
        link( rel="stylesheet" href="/assets/fonts/raleway.css" media="lazyloading" )

        link( rel="icon" href="/media/favicon.png?1" )

    body

        .page-layout#page-layout
            header.page-layout__header
                include page-header

            include page-footer

            main.page-layout__main
                block main

                //-
                    include ../components/download-cv/download-cv

                div( id="app" )

        script( async src="/app/bundle.js" type="text/javascript" )

        //-
            script( type="application/ld+json" )
                != JSON.stringify(CV, 4)

        script.
            (function() {
                window.onload = function() {
                    var links = document.querySelectorAll('[media="lazyloading"]');
                    [].forEach.call(links, function(link) {
                        link.media = 'all';
                    });
                };
